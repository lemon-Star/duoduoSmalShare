
/* 样式 */
page {
  background-color: #f8f8f8;
  height: 100%;
  overflow: auto;
}

.contain{
  width: 100%;
  height: 100%;
 }
 .tab{
  width: 100%;
  height: 100rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  white-space: nowrap;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 100rpx;
   
 }
 .tab-item{
  display: inline-block;
  width: 23%;
  text-align: center;
  font-size: 14px;
  color: #8f9193;
  background-color: #FFE680;
  border-right: 2rpx solid #fff;
 }
 .tab-item:last-child{
   border-right: none;
 }
 .active{
  color: #ec780b;
 }
 .box{
    position:relative;
    overflow: hidden;
    box-sizing: border-box;
    text-align: center;
    font-size: 14px;
    margin: 30rpx 16rpx;
    border: 1rpx solid #fff;
    border-radius: 8%;
    padding: 20rpx 0;
    background-color: #fff;
 }
 .pic{
   float: left;
   width: 30%;
 }
 .title{
   float: left;
   width: 68%;
   font-size: 28rpx;
   position: relative;
   overflow: hidden;
 }
 .pic{
   display:flex;   
   justify-content: center; 
 }
 .name{
  float: left;
  text-align: left;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
 }
 .info{
   float: right;
   margin-top: 20rpx;
 }
 .num,.button{
   display: inline-block;
 }
 .num{
   width:200rpx;
   text-align: left;
 }
 .button{
    height: 60rpx;
    line-height: 60rpx;
    border: 1px solid rgb(238, 171, 28);
    border-radius: 20rpx;
    width: 220rpx;
    margin-left: 60rpx;
    color: #ec780b;
 }
.loading {
    text-align: center;
}